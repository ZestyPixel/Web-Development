<%- include("includes/head.ejs") %> <!-- '-' is used to output raw html without escaping -->
<body>
    <h2>This page belongs to <%= data.name %></h2> 
    <button>Follow</button>
    <button>Message</button>

    <p>Followers: 
        <strong><%= data.followers %></strong> &nbsp; &nbsp; &nbsp; &nbsp;<!-- Strong tag makes text bold and is used for semantic markup  -->
        Following: 
        <strong><%= data.following %></strong> 
    </p>
    <hr>
    <h3>Posts</h3>
    <% for(let post of data.posts){ %>
        <img src="<%= post.image %>" alt="Post" width="200px" height="200px">
        <p><%= post.likes %> Likes</p>
        <p><%= post.comments %> Comments</p>
    <% } %>


